    include vars.i

	listing on

 IFDEF EXACT
    message "REPORT: EXACT MEMORY IMAGE"
    IFDEF SERIAL
        fatal "EXACT is an exclusive option"
    ENDIF
    IFDEF SERIAL_VERBOSE
        fatal "EXACT is an exclusive option"
    ENDIF
    IFDEF NEWFEAT
        fatal "EXACT is an exclusive option"
    ENDIF
 ELSE
